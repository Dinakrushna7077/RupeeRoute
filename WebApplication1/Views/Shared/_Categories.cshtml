@{
}
@model IEnumerable<RupeeRoute.Web.Models.ExpenseCategoryViewModel>

@{
    ViewData["Title"] = "Expense Categories";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<!-- Main content -->
<main class="col-lg-10 offset-lg-2 px-4 py-4">

    <div class="d-block justify-content-between align-items-center mb-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold">Expense Categories</h3>

            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                <i class="fa fa-plus me-1"></i> Add Category
            </button>
        </div>

        <!-- Category List -->
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Category Name</th>
                            <th>Created On</th>
                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>
                                        <span class="badge bg-info text-dark px-3 py-2">
                                            @item.CategoryName
                                        </span>
                                    </td>
                                    <td>
                                        @(item.CreatedOn == DateTime.MinValue ? "-" : item.CreatedOn?.ToString("dd MMM yyyy"))
                                    </td>
                                    <td class="text-end">
                                        <button class="btn btn-sm btn-outline-danger">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    No categories found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
<!-- ADD CATEGORY MODAL -->
<div class="modal fade" id="addCategoryModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Add Expense Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form id="categoryForm">

                    <div class="mb-3">
                        <label class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="categoryName" placeholder="e.g. Food" required />
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-save me-1"></i> Save
                        </button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
