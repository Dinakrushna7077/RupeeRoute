@model IEnumerable<RupeeRoute.Web.Models.ExpensesViewModel>

@{
    ViewData["Title"] = "Expenses - RupeeRoute";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

<style>
    body {
        background: #f4f6fb;
    }

    .sidebar {
        background: #fff;
        height: 100vh;
        border-right: 1px solid #dee2e6;
    }

        .sidebar .nav-link {
            color: #495057;
            margin-bottom: 0.5rem;
        }

            .sidebar .nav-link.active {
                font-weight: bold;
                color: #198754;
            }

    .expense-card {
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
    }

    .badge-category {
        font-size: 0.8rem;
        padding: 6px 10px;
        border-radius: 8px;
    }
</style>
<!-- Add Expense Modal -->
<div class="modal fade" id="addExpenseModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">

            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa fa-wallet me-2"></i>Add Expense
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form id="expenseForm">

                    <div class="mb-3">
                        <label class="form-label">Amount (₹)</label>
                        <input type="number" class="form-control" id="amount" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select class="form-select" id="categoryId" required>
                            <option value="">-- Select Category --</option>
                            @* @foreach (var c in Model.ExpenseByCategory)
                            {
                                <option value="@c.ExpenseById">@c.Category</option>
                            } *@
                        </select>
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" id="description" />
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" onclick="saveExpense()">Save</button>
            </div>

        </div>
    </div>
</div>


<!----------------------------------------------------------------------->
    <div class="row">

       

        <!-- Main content -->
        <main class="col-lg-10 offset-lg-2 px-4 py-4">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">Expenses</h1>
            

                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addExpenseModal" onclick="loadCategories()">
                    <i class="fa fa-plus me-1"></i> Add Expense
                </button>
            </div>
            
            

            <!-- Expenses Table -->
            <div class="card expense-card">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th class="text-end">Amount (₹)</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var e in Model)
                                {
                                    <tr>
                                        <td>@e.ExpenseDate.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <span class="badge bg-success badge-category">
                                                @e.CategoryName
                                            </span>
                                        </td>
                                        <td>@e.Description</td>
                                        <td class="text-end text-danger fw-bold">
                                            ₹@e.Amount
                                        </td>
                                        <td class="text-center">
                                            <button class="btn btn-sm btn-outline-primary me-1">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                        <button class="btn btn-sm btn-outline-danger delete-btn"
                                                data-id="@e.ExpenseId"
                                                data-name="@e.Description">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted">
                                        No expenses found
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </main>
    </div>
<!-- CONFIRM DELETE MODAL -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title text-danger">
                    <i class="fa fa-warning me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                Are you sure you want to delete 
                <strong id="deleteCategoryName"></strong> ?
                <br />
                <span class="text-muted">Once deleted, this action cannot be undone.'</span>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button class="btn btn-danger" id="confirmDeleteBtn">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Open modal
        var deleteExpenseId = null;
    $(document).on('click', '.delete-btn', function () {
        deleteExpenseId = $(this).data('id');
        const categoryName = $(this).data('name');

        $('#deleteCategoryName').text(categoryName);
        $('#confirmDeleteModal').modal('show');
    });

    // Confirm delete
    $('#confirmDeleteBtn').on('click', ()=> {
        $.ajax({
            url: '/Dashboard/DeleteExpense',
            type: 'POST',
            data: { id: deleteExpenseId },
            success: function (response) {

                if (response.success) {
                    $('#confirmDeleteModal').modal('hide');

                    // remove row smoothly
                    $(`button[data-id="${deleteExpenseId}"]`)
                        .closest('tr')
                        .fadeOut(300, function () {
                            $(this).remove();
                        });
                }
                else {
                    $('#confirmDeleteModal').modal('hide');
                    alert(response.message || 'Delete failed');
                }
            },
            error: function () {
                alert('Something went wrong!');
            }
        });
    });
    //loadCategories 
    function loadCategories() {
        $.ajax({
            url: '/Dashboard/GetCategories',
            type: 'GET',
            success: function (data) {
                const dropdown = $('#categoryId');
                dropdown.empty();
                dropdown.append('<option value="">-- Select Category --</option>');

                $.each(data, function (i, item) {
                    dropdown.append(
                        `<option value="${item.categoryId}">
                            ${item.categoryName}
                         </option>`
                    );
                });
            },
            error: function () {
                alert('Failed to load categories');
            }
        });
    }
</script>
