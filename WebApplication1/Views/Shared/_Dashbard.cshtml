@model RupeeRoute.Web.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard - RupeeRoute";

    // Monthly Expense calculation from API list
}
<link href="~/css/dashboard.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

<!-- Add Expense Modal -->
<div class="modal fade" id="addExpenseModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">

            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa fa-wallet me-2"></i>Add Expense
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <form id="expenseForm">

                    <div class="mb-3">
                        <label class="form-label">Amount (₹)</label>
                        <input type="number" class="form-control" id="amount" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <select class="form-select" id="categoryId" required>
                            <option value="">-- Select Category --</option>
                            @foreach (var c in Model.ExpensesByCategory)
                            {
                                <option value="@c.ExpenseById">@c.Category</option>
                            }
                        </select>
                    </div>


                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" id="description" />
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" onclick="saveExpense()">Save</button>
            </div>

        </div>
    </div>
</div>


<!----------------------------------------------------------------------->

<div class="row">



    <!-- Main content -->
    <main class="col-lg-10 offset-lg-2 px-4 py-2">
        <div class="d-flex justify-content-between py-4">
            <h4 class="">Dashboard</h4>
            <button class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#addExpenseModal"
                    onclick="loadCategories()">
                <i class="fa fa-plus me-1"></i> Add Expense
            </button>



        </div>
        <div class="row g-4 mb-4">


            <!-- Monthly Income -->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card card-stat p-3">
                    <div class="d-flex align-items-center">
                        <div class="icon bg-income me-3"><i class="fa fa-arrow-up"></i></div>
                        <div>
                            <small>Monthly Income</small>
                            <h4 class="mb-0">₹@Model.MonthlySavings</h4>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Monthly Expense -->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card card-stat p-3">
                    <div class="d-flex align-items-center">
                        <div class="icon bg-expense me-3"><i class="fa fa-arrow-down"></i></div>
                        <div>
                            <small>Monthly Expense</small>
                            <h4 class="mb-0">₹@Model.MonthlyExpenses</h4>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 🔥 Total Expense (NEW CARD)-->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card card-stat p-3">
                    <div class="d-flex align-items-center">
                        <div class="icon bg-expense me-3"><i class="fa fa-receipt"></i></div>
                        <div>
                            <small>Total Expense</small>
                            <h4 class="mb-0">₹@Model.TotalExpenses</h4>
                        </div>
                    </div>
                </div>
            </div>
                    
            <!-- Available Balance -->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card card-stat p-3">
                    <div class="d-flex align-items-center">
                        <div class="icon bg-balance me-3"><i class="fa fa-wallet"></i></div>
                        <div>
                            <small>Available Balance</small>
                            <h4 class="mb-0">₹@Model.AvailableBalance</h4>
                        </div>
                    </div>
                </div>
            </div>


            

        </div>


        <!-- Recent Transactions -->
        <div class="card shadow-sm">
            <div class="card-header fw-bold bg-white">Recent Transactions</div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th class="text-end">Amount</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model?.RecentTransactions != null && Model.RecentTransactions.Any())
                        {
                            foreach (var t in Model.RecentTransactions)
                            {
                                <tr>
                                    <td>
                                        @t.Date.ToString("dd MMM yyyy")
                                    </td>

                                    <td>
                                        <span class="badge @(t.Amount < 0 ? "bg-danger" : "bg-success")">
                                            @t.Category
                                        </span>
                                    </td>

                                    <td>
                                        @t.Note
                                    </td>

                                    <td class="text-end fw-semibold @(t.Amount < 0 ? "text-danger" : "text-success")">
                                        @(t.Amount < 0 ? "-" : "+") ₹@Math.Abs(t.Amount)
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">
                                    No transactions found
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>



    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
